{
    // Formatters
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
    },
    "notebook.formatOnSave.enabled": true,
    "notebook.formatOnCellExecution": true,
    "[latex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop",
        "editor.formatOnSave": true,
        "editor.wordWrap": "on"
    },
    "[bibtex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop",
        "editor.formatOnSave": true,
        "editor.wordWrap": "on"
    },
    "[r]": {
        "editor.defaultFormatter": "REditorSupport.r",
        "editor.formatOnSave": true,
    },
    "[rmd]": {
        "editor.defaultFormatter": "REditorSupport.r",
        "editor.formatOnSave": true,
    },

    "latex-sympy-calculator.linux": "${workspaceFolder}/venv/bin/python",
    "latex-sympy-calculator.windows": "${workspaceFolder}\\venv\\Scripts\\python",
    "latex-sympy-calculator.mac": "${workspaceFolder}/venv/bin/python",

    // Grammerly Settings
    "grammarly.files.include": ["**/README.md", "**/readme.md", "**/*.tex"],
    "grammarly.config.suggestionCategories.informalPronounsAcademic": "on",
    "grammarly.config.documentDialect": "british",
    "grammarly.config.documentDomain": "academic",

    // Hack allow script execution on Windows
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": [
                "-ExecutionPolicy",
                "Bypass"
            ]
        }
    },

    // Python Unittests
    "python.testing.pytestArgs": [
        "python_project"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "files.exclude": {
        // hide test cache
        "**/.pytest_cache/**": true,

        // hide package egg-info file
        "**/*.egg-info/**": true,

        // hide latex compile files
        "latex_project/**/*.aux": true,
        "latex_project/**/*.*-SAVE-ERROR": true,
        "latex_project/**/*.lof": true,
        "latex_project/**/*.lot": true,
        "latex_project/**/*.fls": true,
        "latex_project/**/*.out": true,
